# AIMA User Management Service - Development Environment
# This is a development configuration - DO NOT use in production

# Application Settings
APP_NAME=AIMA User Management Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=true

# Security Settings
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_HASH_ROUNDS=12

# Session Settings
SESSION_EXPIRE_MINUTES=60
SESSION_MAX_PER_USER=5
SESSION_CLEANUP_INTERVAL_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://aima_user:dev_password@localhost:5432/aima_users
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_MAX_CONNECTIONS=10

# Message Broker Configuration (RabbitMQ)
RABBITMQ_URL=amqp://aima:dev_password@localhost:5672/aima
RABBITMQ_CONNECTION_TIMEOUT=10
RABBITMQ_HEARTBEAT=600
RABBITMQ_RETRY_DELAY=5
RABBITMQ_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Monitoring
MONITORING_ENABLED=true
METRICS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/user-management.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
LOG_CONSOLE_ENABLED=true

# External Service URLs
MEDIA_SERVICE_URL=http://localhost:8001
JOB_SERVICE_URL=http://localhost:8002
GPU_SERVICE_URL=http://localhost:8003
ANALYSIS_SERVICE_URL=http://localhost:8004
DATA_FUSION_SERVICE_URL=http://localhost:8005

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_PASSWORD_RESET=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true

# Development Settings
DEV_AUTO_RELOAD=true
DEV_SHOW_DOCS=true
DEV_ALLOW_ORIGINS=*